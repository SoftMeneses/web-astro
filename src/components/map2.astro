---
import {
	IconBrandFacebook,
	IconBrandGmail,
	IconBrandWhatsapp,
	IconBrandX,
} from "@tabler/icons-react"
---

<link
	href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
	rel="stylesheet"
	integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
	crossorigin="anonymous"
/>

<div class="cs-content d-flex justify-content-center">
    <span class="cs-topper">Contáctanos</span>
    <h2 class="cs-title">¿Alguna Duda?</h2>
    <p class="cs-text">
      No dudes en contactarnos por alguna de nuestras redes sociales. ¡También puedes ubicarnos en nuestra oficina!
    </p>
</div>

<div id="ubicacion">
	<div class="ubi-col-1">
		<div class="rrss-container">
			<a href="https://www.facebook.com/caritasvenezuela/" target="_blank" rel="noopener noreferrer" class="rrss-item">
				<IconBrandFacebook className="rrss-icon" />
				<div>
					<p>Facebook | caritasvenezuela</p>
					<p class="rrss-item-text">¡Síguenos en Facebook!</p>
				</div>
			</a>

			<a href="https://twitter.com/EdasCaritas" target="_blank" rel="noopener noreferrer" class="rrss-item">
				<IconBrandX className="rrss-icon" />
				<div>
					<p>Twitter/x | @EdasCaritas</p>
					<p class="rrss-item-text">¡Síguenos en Twitter!</p>
				</div>
			</a>

			<a href="mailto:caritasvenezuela@gmail.com" class="rrss-item">
				<IconBrandGmail className="rrss-icon" />
				<div>
					<p>info@caritas.com</p>
					<p class="rrss-item-text">¡Envíanos un correo!</p>
				</div>
			</a>

			<a href="https://www.whatsapp.com/?lang=es_LA" target="_blank" rel="noopener noreferrer" class="rrss-item">
				<IconBrandWhatsapp className="rrss-icon" />
				<div>
					<p>+58 424 984 939</p>
					<p class="rrss-item-text">¡Escríbenos!</p>
				</div>
			</a>
		</div>

        <iframe
                id="mapa-caritas"
                title="Ubicacion Caritas San Cristobal"
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d192.70694802486003!2d-72.23531469452257!3d7.7657345779312905!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e666ca746581f8b%3A0x1738e8780208a00d!2sCaritas!5e1!3m2!1ses!2sve!4v1712499767821!5m2!1ses!2sve"
                height="450"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
            >
            </iframe>
            <p class="maps-text">
                Oficina de Atención a Refugiados Cáritas. ACNUR Museo Diocesano, calle
                5,entre 3 y 4, San Cristobal. Edo. Táchira Calle 5, San Cristóbal 5001,
                Táchira
            </p>
	</div>

    <div class="ubi-col-2">
        <div id="cs-contact-242" class="ubi-contact">
            <form id="ubi-form" name="Contact Form" method="post">
                <label class="cs-label">
                    Nombre
                    <input class="cs-input" required type="text" id="name-242" name="name" placeholder="John/Jhoana Perez">
                </label>
                <label class="cs-label">
                    Correo Electrónico
                    <input class="cs-input" required type="text" id="email-242" name="email" placeholder="correo@mail.com">
                </label>
                <label class="cs-label">
                    Teléfono
                    <input class="cs-input" required type="text" id="phone-242" name="phone" placeholder="+58 (424) 345-6789">
                </label>
                <label class="cs-label">
                    ¿Cómo nos encontraste?
                    <input class="cs-input" type="text" id="find-242" name="find-us" placeholder="Redes Sociales, Familiar, Amigo...">
                </label>
                <label class="cs-label cs-label-message">
                    Mensaje
                    <textarea class="cs-input cs-textarea" required name="Message" id="message-242" placeholder="Hola, estoy interesado en..."></textarea>
                </label>
                <button class="cs-button-solid cs-submit" type="submit">Enviar</button>
            </form>
        </div>
    
        <div class="ubi-col-2">
            
        </div>
    </div>
    </div>


<style>
	#ubicacion {
		margin-top: 3rem;
		display: grid;
		place-items: center;
		grid-template-columns: repeat(2, 1fr);
		gap: 5rem;
	}

	#mapa-caritas {
		border-radius: 1rem;
		min-width: 100%;
	}

	.rrss-container {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
		box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
		padding: 2rem 2rem;
		border-radius: 1rem;
        margin-bottom: 2rem;
	}

	.rrss-item {
		display: flex;
		gap: 1rem;
		color: var(--primary);
		text-decoration: none;
		font-weight: bold;
	}

	.rrss-icon {
		min-height: 3rem;
		min-width: 3rem;
		color: var(--primary);
		opacity: 0.7;
	}

	.maps-text {
		font-size: 0.8rem;
	}

	.ubi-col-1 {
		min-height: 100%;
		min-width: 100%;
		padding: 0px 0px 0px 100px;
		display: flex;
		flex-direction: column;
		gap: 0.6rem;

	}

	.ubi-col-2 {
		min-height: 100%;
		min-width: 100%;
		padding: 0px 100px 0px 0px;
	}

	.ubi-title {
		font-weight: 500;
		color: var(--primary);
	}

    .ubi-contact{
        padding: 0px 16px !important;
        
    }

	@media (max-width: 768px) {
		#ubicacion {
			grid-template-columns: 1fr;
			gap: 1rem;
		}

		.ubi-col-1,
		.ubi-col-2 {
			padding: 0px 2rem;
		}

		.rrss-container {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 426px) {
		.rrss-container {
			grid-template-columns: 1fr;
		}
	}

  /* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #cs-contact-242 {
        padding: var(--sectionPadding);
    }
    
    .cs-content {
        margin-top: 10rem;
        /* set text align to left if content needs to be left aligned */
        text-align: center;
        width: 100%;
        display: flex;
        flex-direction: column;
        /* centers content horizontally, set to flex-start to left align */
        align-items: center;
    }
    .cs-topper {
        font-size: var(--topperFontSize);
        line-height: 1.2em;
        text-transform: uppercase;
        text-align: inherit;
        letter-spacing: 0.1em;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 0.25rem;
        display: block;
    }
    .cs-title {
        font-size: var(--headerFontSize);
        font-weight: 900;
        line-height: 1.2em;
        text-align: inherit;
        max-width: 32.625rem;
        margin: 0 0 1rem 0;
        color: var(--headerColor);
        position: relative;
    }
    .cs-text {
        font-size: var(--bodyFontSize);
        line-height: 1.5em;
        text-align: inherit;
        width: 100%;
        max-width: 32.625rem;
        margin: 0;
        color: var(--bodyTextColor);
    }
    #cs-contact-242 #cs-form-242 {
        margin-top: -5rem;
        width: 100%;
        /* 32px - 40px */
        margin-bottom: clamp(2rem, 5.3vw, 2.5rem);
        /* 20px - 40px */
        padding: clamp(1.25rem, 4.5vw, 2.5rem);
        /* prevents padding and border from affecting height and width */
        box-sizing: border-box;
        border: 1px solid #dad9e3;
        border-radius: 1rem;
    }
    #cs-contact-242 .cs-label {
        /* 14px - 16px */
        font-size: clamp(0.875rem, 1.3vw, 1rem);
        line-height: 1.5em;
        font-weight: 700;
        /* 16px - 20px */
        margin-bottom: clamp(1rem, 1em, 1.25rem);
        color: var(--headerColor);
        display: flex;
        justify-content: center;
        align-items: flex-start;
        flex-direction: column;
    }
    #cs-contact-242 .cs-label-message {
        /* 32px - 40px */
        margin-bottom: clamp(2rem, 4.5vw, 2.5rem);
    }
    #cs-contact-242 .cs-input,
    #cs-contact-242 .cs-textarea {
        font-size: 1rem;
        width: 100%;
        height: 4rem;
        margin-top: 0.25rem;
        padding-left: 1.25rem;
        /* set transparent border so on hover border doesn't make it glitch */
        border: 1px solid transparent;
        border-bottom: 1px solid #b4b2c7;
        /* prevents border & padding from affecting height */
        box-sizing: border-box;
        transition: border 0.3s;
    }
    #cs-contact-242 .cs-input:hover,
    #cs-contact-242 .cs-textarea:hover {
        border: 1px solid var(--primary);
    }
    #cs-contact-242 .cs-input::placeholder,
    #cs-contact-242 .cs-textarea::placeholder {
        color: #7d799c;
    }
    #cs-contact-242 .cs-textarea {
        font-family: inherit;
        margin: 0;
        padding-top: 1.25rem;
        min-height: 7.5rem;
    }
    #cs-contact-242 .cs-button-solid {
        font-size: 1rem;
        /* 46px - 56px */
        line-height: clamp(2.875rem, 5.5vw, 3.5rem);
        text-decoration: none;
        font-weight: 700;
        text-align: center;
        margin: 0;
        color: #fff;
        min-width: 9.375rem;
        padding: 0 1.5rem;
        background-color: var(--primary);
        border-radius: 0.25rem;
        display: inline-block;
        position: relative;
        z-index: 1;
        /* prevents padding from adding to the width */
        box-sizing: border-box;
    }
    #cs-contact-242 .cs-button-solid:before {
        content: "";
        position: absolute;
        height: 100%;
        width: 0%;
        background: #000;
        opacity: 1;
        top: 0;
        left: 0;
        z-index: -1;
        border-radius: 0.25rem;
        transition: width 0.3s;
    }
    #cs-contact-242 .cs-button-solid:hover:before {
        width: 100%;
    }
    #cs-contact-242 .cs-submit {
        width: 100%;
        border: none;
        border-radius: 0.5rem;
    }
    #cs-contact-242 .cs-submit:hover {
        cursor: pointer;
    }

    
/* Tablet - 700px */
@media only screen and (min-width: 43.75rem) {
    #cs-contact-242 #cs-form-242 {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        /* sends it to the right in the 2nd position */
        order: 2;
    }
    #cs-contact-242 .cs-label {
        width: 48%;
    }
    #cs-contact-242 .cs-label-message {
        width: 100%;
    }
    #cs-contact-242 .cs-button-solid {
        margin-left: 0;
    }
    #cs-contact-242 .cs-right-section {
        flex-direction: row;
        align-items: center;
    }
}
/* Small Desktop - 1024px */
@media only screen and (min-width: 64rem) {
    
    #cs-contact-242 #cs-form-242 {
        margin-top: -25rem;
        width: 50%;
        max-width: 40.625rem;
    }
    #cs-contact-242 .cs-label {
        width: 100%;
    }
    
}
</style>






