  crossorigin="anonymous"
/>

<div id="container" class="d-flex justify-content-center align-items-center vh-100">
  <div id="container-son" class="bg-white p-5 rounded-5 text-secondary" style="width: 25rem;">
    <div class="d-flex justify-content-center">
      <img src="../../public/user-circle.svg" alt="user-icon" height="120rem" />
    </div>
    <div class="text-center fs-1 fw-bold">Registro</div>
    <div class="input-group mt-4">

      <div class="input-group-text bg-dark">
        <img
          src="../../public/username-icon.svg"
          alt="username-icon"
          height="15rem"
        />
      </div>
      <input class="form-control bg-light" type="text" placeholder="Usuario" />
    </div>
    <div class="input-group mt-1">
    <div class="input-group-text bg-dark">
      <img
        src="../../public/username-icon.svg"
        alt="username-icon"
        height="15rem"
      />
    </div>
    <input class="form-control bg-light" type="text" placeholder="Correo Electronico" />
  </div>

    <div class="input-group mt-1">
      <div class="input-group-text bg-dark">
        <img
          src="../../public/password-icon.svg"
          alt="password-icon"
          height="15rem"
        />
      </div>
      <input class="form-control bg-light" type="password" placeholder="Contraseña" />
    </div>
    <div class="input-group mt-1">
      <div class="input-group-text bg-dark">
        <img
          src="../../public/password-icon.svg"
          alt="password-icon"
          height="15rem"
        />
      </div>
      <input class="form-control bg-light" type="password" placeholder="Confirmar contraseña" />
    </div>
    <div class="boton-login btn text-white d-flex justify-content-center mt-4">Registrate!</div>
    <div class="mt-2 p-3">
      <div class="border-bottom text-center" style="height: 0.9rem">
        <span class="bg-white px-2 fw-semibold">O registrate usando</span>
      </div>
    </div>
    <div class="d-flex gap-2 justify-content-center mt-2">
      <a href="https://accounts.google.com/" target="_blank" ><img src="../../public/google-color-icon2.svg" alt="google-icon" height="35rem"></a>
      <a href="https://www.facebook.com/?locale=es_LA" target="_blank" rel="noopener noreferrer" ><img src="../../public/facebook-color-icon4.svg" alt="google-icon" height="35rem"></a>
      <a href="https://www.linkedin.com/login/es" target="_blank" rel="noopener noreferrer" ><img src="../../public/linkedin-color-icon.svg" alt="google-icon" height="35rem"></a>
    </div>
    <div class="d-flex gap-1 justify-content-center mt-3">
      <div class="fw-semibold">¿Ya tienes una cuenta?</div>
      <a href="/log-in" class="text-decoration-none fst-italic ">Inicia Sesión</a>
    </div>
  </div>
</div>

