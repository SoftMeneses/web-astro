---
import LoginForm from "./login/login-form"

const handleRedirect = () => {
	window.location.href = "/register"
}
---

<link
	href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
	rel="stylesheet"
	integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
	crossorigin="anonymous"
/>

<div
	id="container"
	class="d-flex justify-content-center align-items-center vh-100"
>
	<div
		id="container-son"
		class="bg-white p-5 rounded-5 text-secondary"
		style="width: 25rem;"
	>
		<div class="d-flex justify-content-center">
			<img src="../../public/user-circle.svg" alt="user-icon" height="120rem" />
		</div>
		<div class="text-center fs-1 fw-bold">Inicio de Sesión</div>
		<LoginForm client:load />
		<div class="mt-2 p-3">
			<div class="border-bottom text-center" style="height: 0.9rem">
				<span class="bg-white px-2 fw-semibold">O incia sesión con</span>
			</div>
		</div>
		<div class="d-flex gap-2 justify-content-center mt-2">
			<a href="https://accounts.google.com/" target="_blank">
				<img
					src="../../public/google-color-icon2.svg"
					alt="google-icon"
					height="35rem"
				/>
			</a>
			<a
				href="https://www.facebook.com/?locale=es_LA"
				target="_blank"
				rel="noopener noreferrer"
			>
				<img
					src="../../public/facebook-color-icon4.svg"
					alt="google-icon"
					height="35rem"
				/>
			</a>
			<a
				href="https://www.linkedin.com/login/es"
				target="_blank"
				rel="noopener noreferrer"
			>
				<img
					src="../../public/linkedin-color-icon.svg"
					alt="google-icon"
					height="35rem"
				/>
			</a>
		</div>
		<div class="d-flex gap-1 justify-content-center mt-3">
			<div class="fw-semibold">¿Aún no tienes cuenta?</div>
			<a href="/register" class="text-decoration-none fst-italic">Registrate</a>
		</div>
	</div>
</div>

<style is:global>
	#container {
		margin-top: 12rem;
	}

	#container-son {
		box-shadow: 10px 12px 60px -20px #4e0000;
	}

	#container .boton-login {
		background-color: #4e0000;
	}
	.boton-login {
		width: 100%;
		text-align: center;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: #4e0000;
	}
</style>
